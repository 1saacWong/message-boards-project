{{#if addNewQuestion}}

<h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="question">Question</label>
        {{input value=question id="question"}}
      </div>

      <div class="form-group">
        <label for="notes">Additional Notes</label>
        {{input value=notes id="notes"}}
      </div>

      <div class="form-group">
        <label for="image">Images</label>
        {{input value=image id="image"}}
      </div>

      <button {{action 'saveQuestion1'}}>Save</button>
    </form>
  </div>

{{else}}
  <button {{action 'questionFormShow'}}>Ask a Question!</button>
{{/if}}
